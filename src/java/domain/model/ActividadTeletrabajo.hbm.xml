<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="domain.model.ActividadTeletrabajo" table="ACTIVIDAD_TELETRABAJO">
        <composite-id class="domain.model.ActividadTeletrabajoId" name="id">
            <key-property name="atelRut" type="int">
                <column name="ATEL_RUT" precision="8" scale="0"/>
            </key-property>
            <key-property name="atelFecha" type="date">
                <column name="ATEL_FECHA" />
            </key-property>
        </composite-id>
        <property name="atelDes" type="string">
            <column length="500" name="ATEL_DES"/>
        </property>
        <property name="atelEstado" type="string">
            <column length="1" name="ATEL_ESTADO"/>
        </property>
        <many-to-one class="domain.model.FuncionarioTeletrabajo" fetch="select" insert="false" name="funcionarioTeletrabajo" update="false">
            <column name="ATEL_RUT" not-null="true" precision="8" scale="0"/>
        </many-to-one>
        <many-to-one class="domain.model.EstadoActividadTeletrabajo" fetch="select" insert="false" name="estado" update="false">
            <column name="ATEL_ESTADO" not-null="true" length="1"/>
        </many-to-one>
        
    </class>
</hibernate-mapping>