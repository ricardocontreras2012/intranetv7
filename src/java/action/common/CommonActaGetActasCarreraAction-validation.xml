<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
  		"/WEB-INF/classes/xwork-validator-1.0.3.dtd">
<validators>
    <field name="pos">
        <field-validator type="required">
            <message key="error.required.parameter"/>
        </field-validator>
        <field-validator type="int">
            <param name="min">0
            </param>
            <message key="error.value.parameter"/>
        </field-validator>
    </field>
    <field name="agno">
        <field-validator type="required">
            <message key="error.required.parameter"/>
        </field-validator>
        <field-validator type="int">
            <param name="min">1950
            </param>
            <message key="error.value.parameter"/>
        </field-validator>
    </field>
    <field name="sem">
        <field-validator type="required">
            <message key="error.required.parameter"/>
        </field-validator>
        <field-validator type="int">
            <param name="min">1</param>
            <param name="max">3</param>
            <message key="error.range"/>
        </field-validator>
    </field>
</validators>