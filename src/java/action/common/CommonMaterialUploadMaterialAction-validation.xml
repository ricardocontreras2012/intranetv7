<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
  		"/WEB-INF/classes/xwork-validator-1.0.3.dtd">
<validators>
    <field name="tipo">
        <field-validator type="required">
            <message key="error.required.parameter"/>
        </field-validator>
        <field-validator type="int">
            <param name="min">1
            </param>
            <message key="error.value.parameter"/>
        </field-validator>
    </field>
    <field name="caption">
        <field-validator type="stringlength">
            <param name="maxLength">500
            </param>
            <message key="error.maxLength.parameter"/>
        </field-validator>
    </field>
    <field name="uploadFileName">
        <field-validator type="requiredstring">
            <message key="error.required.parameter"/>
        </field-validator>
        <field-validator type="stringlength">
            <param name="minLength">1
            </param>
            <message key="error.minLength.parameter"/>
        </field-validator>
    </field>
</validators>
